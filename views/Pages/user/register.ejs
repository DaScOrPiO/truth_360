<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/styles/general/event-styles.css">

<div
  class="register container d-flex justify-content-center align-items-center mt-5"
>
  <div class="items row">
    <div class="col-md-6 offset-md-3 col-xl-12">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title">Register</h1>
          <form
            action="/register"
            method="post"
            class="un-validated"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">E-mail</label>
              <input
                class="form-control"
                type="email"
                id="mail"
                name="email"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
            </div>
            <button class="btn btn-success">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
