<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/styles/general/event-styles.css" />

<div
  class="login container d-flex justify-content-center align-items-center mt-5"
>
  <div class="items row">
    <div class="col-md-6 offset-md-3 col-xl-12">
      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title">Login</h1>
          <form action="/login" method="post" class="un-validated" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
            </div>
            <button class="btn btn-success btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
