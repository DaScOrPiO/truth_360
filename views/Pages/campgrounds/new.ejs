<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center px-5 py-3">New Campground</h1>
  <hr />
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      class="un-validated"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="item[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="item[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          required
          multiple
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="item[price]"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="item[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <div class="d-flex justify-content-center">
      <a
        class="button d-flex justify-content-center align-items-center w-50"
        href="/campgrounds"
      >
        <i class="material-symbols-outlined mx-2"> arrow_back </i>
        Back
      </a>
    </div>
  </div>
</div>

