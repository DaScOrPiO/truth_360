  const moreData = <%- JSON.stringify(data2) %>;
  let totalItems = <%- totalItems %>;
  let items_per_page = <%- items_per_page %>;
</script>

<script src="/Javascripts/clusterMap.js"></script>
<script src="/Javascripts/locations.js"></script>
