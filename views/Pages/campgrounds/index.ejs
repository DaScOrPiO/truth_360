<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Campgrounds</title>
  </head>
  <body>
    <h1>All Campgrounds</h1>

    <div>
      <li><a href="campgrounds/new">Add new</a></li>
    </div>

    <ul>
      <%for(let campground of campgrounds){%>
      <li>
        <a href="campgrounds/<%= campground._id %>/show">
          <%= campground.title %></a
        >
      </li>
      <% }%>
    </ul>
  </body>
</html>
