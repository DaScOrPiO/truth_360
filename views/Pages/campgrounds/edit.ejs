<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit <%= item.title %></h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%=item._id%>?_method=PATCH" method="POST" class="un-validated" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="item[title]"
          value="<%=item.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="item[location]"
          value="<%=item.location %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="item[image]"
          value="<%=item.image %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="item[price]"
            value="<%=item.price %>"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="item[description]"
          required
        >
<%= item.description%></textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
    </form>
    <a href="/campgrounds"
      >Back To Campground</a
    >
  </div>
</div>

