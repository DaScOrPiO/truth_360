<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/styles/ratings/rating.css" />

<h1><%= item.title %></h1>
<hr />
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= item.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= item.title%></h5>
        <p class="card-text"><%= item.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= item.location%></li>
        <li class="list-group-item">Author: <%= item.author.username%></li>
        <li class="list-group-item">$<%= item.price%>/night</li>
      </ul>
      <%if(currentUser && item.author._id.equals(currentUser._id)) {%>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/campgrounds/<%=item._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=item._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <%} %>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>

  <div class="col-6">
    <%if(currentUser) {%>
    <h1>Leave a review</h1>
    <form
      action="/campgrounds/<%=item._id%>/reviews"
      method="post"
      class="un-validated mb-3"
      novalidate
    >
      <div class="mb-3">
        <fieldset class="starability-grow">
          <legend>rating:</legend>
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="item[rating]"
            value="1"
            checked
            aria-label="No rating."
            max="5"
          />

          <input type="radio" id="rate1" name="item[rating]" value="1" />
          <label for="rate1">1 star.</label>

          <input type="radio" id="rate2" name="item[rating]" value="2" />
          <label for="rate2">2 stars.</label>

          <input type="radio" id="rate3" name="item[rating]" value="3" />
          <label for="rate3">3 stars.</label>

          <input type="radio" id="rate4" name="item[rating]" value="4" />
          <label for="rate4">4 stars.</label>

          <input type="radio" id="rate5" name="item[rating]" value="5" />
          <label for="rate5">5 stars.</label>

          <span class="starability-focus-ring"></span>
        </fieldset>
      </div>

      <div class="mb-3">
        <label for="r-description" class="form-label">Message</label>
        <textarea
          name="item[description]"
          id="r-description"
          cols="30"
          rows="10"
          required
          class="form-control"
        ></textarea>
      </div>

      <button class="btn btn-sm btn-success">Submit</button>
    </form>
    <% }%> <% for(let review of item.ratings) { %>
    <div class="card mb-3">
      <div class="card-body">
        <p class="starability-result" data-rating="<%=review.rating %>">
          Rated: <%=review.rating %> stars
        </p>
        <h6 class="card-subtitle mb-2 text-muted">
          Posted by: <%= review.author.username %>
        </h6>
        <p class="card-text">Review: <%= review.description %></p>
        <%if(currentUser && review.author.equals(currentUser._id)) {%>
        <form
          action="/campgrounds/<%=item.id%>/<%= review._id%>/review?_method=DELETE"
          method="post"
        >
          <button class="btn-sm btn-danger">Delete</button>
        </form>
        <% }%>
      </div>
    </div>
    <% } %>
  </div>
</div>
