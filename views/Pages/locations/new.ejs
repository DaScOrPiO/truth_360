<% layout("layouts/boilerplate") %>

<div class="row">
  <div
    class="d-flex flex-column justify-content-center align-items-center px-5 py-3"
  >
    <h1 class="text-center">Add New Location</h1>
    <small class="text-muted text-center"
      >Ensure location address and description are descriptive as possible to
      help others</small
    >
  </div>
  <hr />
  <div class="col-md-6 offset-md-3">
    <form
      action="/locations"
      method="POST"
      class="un-validated"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control no-text-desc"
          type="text"
          id="title"
          name="item[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control text-input"
          type="text"
          id="location"
          name="item[location]"
          required
        />
        <small class="text-success fs-6 no-view1 fst-italic"
          >Make sure this field is descriptive as possible</small
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control no-text-desc"
          type="file"
          id="image"
          name="image"
          required
          multiple
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Location Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control no-text-desc"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="item[price]"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control text-input"
          type="text"
          id="description"
          name="item[description]"
          required
        ></textarea>
        <small class="text-success fs-6 no-view1 fst-italic"
          >Make sure this field is descriptive as possible</small
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-success" id="submit">Add Location</button>
      </div>
    </form>
    <div class="d-flex justify-content-center">
      <a
        class="button d-flex justify-content-center align-items-center w-50"
        href="/locations"
      >
        <i class="material-symbols-outlined mx-2"> arrow_back </i>
        Back
      </a>
    </div>
  </div>
</div>
<script src="/Javascripts/show-message.js"></script>
<script src="/Javascripts/validateImage-size.js"></script>
