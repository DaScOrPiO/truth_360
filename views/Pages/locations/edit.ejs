<% layout("layouts/boilerplate") %>

<div class="row">
  <div
    class="d-flex flex-column justify-content-center align-items-center px-5 py-3"
  >
    <h1 class="text-center">Edit <%= item.title %></h1>
    <small class="text-muted text-center px-5"
      >Ensure location address and description are descriptive as possible to
      help others</small
    >
  </div>
  <div class="col-md-6 offset-md-3">
    <form
      action="/locations/<%=item._id%>?_method=PATCH"
      method="POST"
      class="un-validated"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control no-text-desc"
          type="text"
          id="title"
          name="item[title]"
          value="<%=item.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control text-input"
          type="text"
          id="location"
          name="item[location]"
          value="<%=item.location %>"
          required
        />
        <small class="text-success fs-6 no-view1"
          >Make sure this field is descriptive as possible</small
        >
      </div>

      <div class="mb-3 custom-file">
        <label for="formFileMultiple" class="form-label custom-file-label"
          >Upload more images</label
        >
        <input
          class="form-control custom-file-input no-text-desc"
          type="file"
          id="images"
          name="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control no-text-desc"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="item[price]"
            value="<%=item.price %>"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          placeholder="Ensure this field is descriptive as possible"
          class="form-control text-input"
          type="text"
          id="description"
          name="item[description]"
          required
        >
<%= item.description%></textarea
        >
        <small class="text-success fs-6 no-view1"
          >Make sure this field is descriptive as possible</small
        >
      </div>

      <div class="mb-3">
        <% item.images.forEach((image, i) => { %>
        <img
          src="<%=image.thumbnail %>"
          class="img-thumbnail"
          height="200"
          alt=""
        />
        <div
          class="btn-group"
          role="group"
          aria-label="Basic checkbox toggle button group"
        >
          <input
            type="checkbox"
            id="image-<%=i %>"
            name="deleteImages[]"
            value="<%=image.filename%>"
            autocomplete="off"
          />
          <label for="image-<%=i %>">delete-item</label>
        </div>
        <%}) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
    </form>
    <div class="d-flex justify-content-center">
      <a
        class="button my-5 d-flex justify-content-center align-items-center w-50"
        href="/locations"
      >
        <i class="material-symbols-outlined mx-2"> arrow_back </i>
        Back
      </a>
    </div>
  </div>
</div>
<script src="/Javascripts/show-message.js"></script>
